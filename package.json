{
  "name": "arisris",
  "version": "1.0",
  "description": "A blog manager",
  "type": "module",
  "scripts": {
    "dev": "bun run -F @arisris/app-* dev",
    "build": "bun run -F @arisris/app-* build",
    "preview": "bun run -F @arisris/app-* preview",
    "clean": "rm -rf node_modules && bun i && bun run -F @arisris/app-* clean && bun typegen",
    "typegen": "bun run -F @arisris/app-* typegen",
    "format": "bun --bun biome format",
    "format:fix": "bun --bun biome format --write",
    "lint": "bun --bun biome lint",
    "lint:fix": "bun --bun biome lint --fix"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/bun": "^1.2.20",
    "typescript": "^5.9.2"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "hono": "^4.9.2",
      "vite": "^7.1.3",
      "wrangler": "4.32.0"
    },
    "catalogs": {
      "svelte-kit": {
        "@sveltejs/adapter-cloudflare": "^7.2.2",
        "@sveltejs/kit": "^2.36.2",
        "@tailwindcss/vite": "^4.1.12",
        "svelte": "^5.38.3",
        "tailwindcss": "^4.1.12"
      }
    }
  },
  "overrides": {
    "esbuild": "0.25.9",
    "wrangler": "4.32.0"
  },
  "patchedDependencies": {
    "wrangler@4.32.0": "patches/wrangler@4.32.0.patch"
  }
}